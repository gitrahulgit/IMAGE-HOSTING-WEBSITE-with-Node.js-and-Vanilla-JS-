<%- include('partials/header'); %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to IMAGE-HOSTER!</h1>
                <p>View our hand picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">ADD NEW IMAGE</a>
                </p>
            </div>
        </header>
        <div class="row" style="text-align: center;">
            <% campgrounds.forEach(function (campgrounds) {%>
                <div class="col-md-6 col-sm-12">
                    <div class="thumbnail">
                        <img src="<%=campgrounds.image%>">
                        <div class="caption">
                            <h4>
                                <%= campgrounds.name%>
                            </h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%=campgrounds._id%>" class="btn btn-primary"> More Info.</a>
                        </p>
                    </div>

                </div>
                <%  });%>
        </div>
    </div>
    <%- include('partials/footer'); %>